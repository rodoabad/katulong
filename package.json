{
  "name": "katulong",
  "description": "A collection of scripts to be used in an npm package to make tooling easier",
  "keywords": [
    "katulong",
    "build",
    "task",
    "runner",
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rodoabad/katulong.git"
  },
  "author": "Rodo Abad <rodoabad@gmail.com> (https://github.com/rodoabad)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rodoabad/katulong/issues"
  },
  "homepage": "https://github.com/rodoabad/katulong#readme",
  "engines": {
    "node": ">=6.x"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test",
      "commit-msg": "validate-commit-msg"
    }
  },
  "dependencies": {
    "code": "^3.0.0",
    "eslint": "^2.11.1",
    "eslint-config-rodoabad": "^1.7.0",
    "mocha": "^2.5.3",
    "mocha-clean": "^1.0.0",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.4",
    "yargs": "^4.7.1"
  },
  "devDependencies": {
    "ghooks": "^1.2.1",
    "semantic-release": "^4.3.5",
    "validate-commit-msg": "^2.6.1"
  },
  "bin": {
    "katulong": "bin/katulong.js"
  },
  "scripts": {
    "pkg:lint": "node bin/katulong.js lint",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "npm run pkg:lint"
  }
}
