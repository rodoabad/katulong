{
  "name": "katulong",
  "description": "A collection of scripts to be used in an npm package to make tooling easier",
  "keywords": [
    "katulong",
    "build",
    "task",
    "runner",
    "coverage",
    "lint",
    "preview",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rodoabad/katulong.git"
  },
  "author": "Rodo Abad <rodoabad@gmail.com> (https://github.com/rodoabad)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rodoabad/katulong/issues"
  },
  "homepage": "https://github.com/rodoabad/katulong#readme",
  "engines": {
    "node": ">=6.x"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test",
      "commit-msg": "validate-commit-msg"
    }
  },
  "dependencies": {
    "babel-cli": "6.11.4",
    "babel-core": "6.11.4",
    "babel-loader": "6.2.4",
    "babel-plugin-transform-es2015-arrow-functions": "6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.10.3",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "code": "3.0.1",
    "eslint": "3.1.1",
    "eslint-config-rodoabad": "1.8.0",
    "isparta": "3.5.3",
    "istanbul": "0.4.4",
    "mocha": "2.5.3",
    "mocha-clean": "1.0.0",
    "react": "15.2.1",
    "react-hot-loader": "1.3.0",
    "shelljs": "0.7.0",
    "sinon": "1.17.4",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1",
    "yargs": "4.8.1"
  },
  "devDependencies": {
    "ghooks": "1.3.2",
    "semantic-release": "4.3.5",
    "validate-commit-msg": "2.6.1"
  },
  "peerDependencies": {
    "react": "15.x"
  },
  "bin": {
    "katulong": "bin/katulong.js"
  },
  "main": "index.js",
  "scripts": {
    "pkg:lint": "node bin/katulong.js lint",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "npm run pkg:lint"
  }
}
